###############################################
# 应用基础配置
###############################################
NEXT_PUBLIC_APP_NAME="i love delay"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE=zh

###############################################
# 数据库（PostgreSQL，自建）
# 说明：前端通过 Next.js 的 API 路由访问数据库，
#      数据库连接仅在服务器端使用，不会泄露给浏览器。
###############################################
# 标准连接串示例：
# DATABASE_URL=postgres://<user>:<password>@<host>:5432/i_love_delay_dev
DATABASE_URL=

# 如数据库需要 SSL，可选择：require 或 prefer（默认不启用）
# PGSSLMODE=require

# 连接池可选参数（默认已合理，按需覆盖）
# PG_POOL_MAX=10
# PG_IDLE_TIMEOUT=30000
# PG_CONN_TIMEOUT=10000

###############################################
# 第三方可选配置（按需保留）
###############################################
# NEXT_PUBLIC_WECHAT_APP_ID=
# WECHAT_APP_SECRET=
# 是否允许前端在非 uniapp 环境使用“模拟登录”。
# 开发建议为 true；生产务必设为 false。
NEXT_PUBLIC_ENABLE_MOCK_LOGIN=true

# 登录方式开关（服务端 API 生效）
# 生产按需启用：true/false
ENABLE_WECHAT_LOGIN=true
ENABLE_HUAWEI_LOGIN=true

# 统一认证（JWT）
# 注意：生产必须更换强随机密钥
AUTH_JWT_SECRET=CHANGE_ME_DEV_ONLY
AUTH_TOKEN_EXPIRES_IN=30d

# 华为 OAuth 端点（示例，按需调整或保留默认）
# HUAWEI_CLIENT_ID=
# HUAWEI_CLIENT_SECRET=
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=