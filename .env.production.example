###############################################
# 生产环境示例配置（模板文件）
# 使用方法：将本文件复制到服务器项目目录并重命名为 .env
#   cp .env.production.example .env
# 注意：不要把真实的 .env 提交到仓库。
###############################################

# 环境标识（供前端显示/逻辑参考）
NEXT_PUBLIC_ENV=production

# 你的生产站点地址（请替换为你的域名）
NEXT_PUBLIC_APP_URL=https://delay.bebackpacker.com

# 应用名称与默认语言
NEXT_PUBLIC_APP_NAME="i love delay"
# 可选 zh / en
NEXT_PUBLIC_DEFAULT_LOCALE=zh

###############################################
# 数据库（PostgreSQL）
###############################################
# 将用户名/密码/主机与数据库名替换为你的真实信息
DATABASE_URL=postgres://i_love_delay:REPLACE_STRONG_PASSWORD@127.0.0.1:5432/i_love_delay

# 如数据库需要 SSL，可开启（按需选择）
# PGSSLMODE=require

# 连接池可选参数（保留默认即可，如需可调整）
# PG_POOL_MAX=10
# PG_IDLE_TIMEOUT=30000
# PG_CONN_TIMEOUT=10000

###############################################
# 其他可选第三方配置（按需）
###############################################
# 微信登录（App/H5/PC 扫码）
# AppID 用于前端读取；AppSecret 仅服务端使用
# 若只配置通用 APP_ID/SECRET，web/h5 也会使用它
NEXT_PUBLIC_WECHAT_APP_ID=
WECHAT_APP_SECRET=

# 可选：区分 PC 扫码（qrconnect）与 微信内 H5 授权（oauth2/authorize）
# - PC 扫码
NEXT_PUBLIC_WECHAT_WEB_APP_ID=
WECHAT_WEB_APP_SECRET=
# - 微信内 H5 授权
NEXT_PUBLIC_WECHAT_H5_APP_ID=
WECHAT_H5_APP_SECRET=

# 生产务必关闭模拟登录
NEXT_PUBLIC_ENABLE_MOCK_LOGIN=false

# 登录方式开关（服务端 API 生效）
# 按需启用：true/false
ENABLE_WECHAT_LOGIN=true
ENABLE_HUAWEI_LOGIN=true

# 微信小程序（小程序端 login -> jscode2session）
ENABLE_WECHAT_MINI_LOGIN=true
WECHAT_MINI_APP_ID=
WECHAT_MINI_APP_SECRET=

# 统一认证（JWT）
# 注意：生产必须更换强随机密钥
AUTH_JWT_SECRET=CHANGE_ME
AUTH_TOKEN_EXPIRES_IN=30d

# 华为 OAuth 端点（示例，按需调整或保留默认）
# HUAWEI_CLIENT_ID=
# HUAWEI_CLIENT_SECRET=
# HUAWEI_REDIRECT_URI=
# HUAWEI_TOKEN_URL=https://oauth-login.cloud.huawei.com/oauth2/v3/token
# HUAWEI_USERINFO_URL=
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
