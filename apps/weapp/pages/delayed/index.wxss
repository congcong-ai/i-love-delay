.header{margin-bottom:32rpx}.title{font-size:52rpx;font-weight:800;color:#111827;display:block}.subtitle{color:#6b7280;display:block}
.cards{display:grid;gap:24rpx}
.card{background:#fff;border-radius:24rpx;padding:32rpx;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.06)}
.card-title{font-weight:600;margin-bottom:12rpx}
.stats{display:flex;gap:16rpx}
.stat{flex:1;background:#f9fafb;border-radius:12rpx;padding:16rpx;display:flex;flex-direction:column;align-items:center}
.stat .n{font-size:36rpx;font-weight:700;color:#111827}
.stat .l{font-size:24rpx;color:#6b7280}
.section{margin-top:36rpx}
.section-title{font-weight:600}
.hint{color:#6b7280;margin:12rpx 0}
/* 任务卡片（统一风格） */
.task-card{background:#fff;border-radius:24rpx;border:1rpx solid #edf2f7;padding:28rpx;margin:20rpx 0;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.05)}
.task-card.active{outline:2rpx solid #2563eb}
.task-name{font-size:30rpx}
.task-sub{color:#6b7280;font-size:24rpx;display:block;margin-top:6rpx}
.badge{background:#111827;color:#fff;border-radius:9999rpx;padding:6rpx 16rpx;font-size:24rpx}
.row{display:flex;gap:16rpx;align-items:center}
.row-right{justify-content:flex-end}
.empty-card{margin:20rpx 0}

/* 历史借口卡片：更大更高，右侧操作 */
.excuse-card{background:#fff;border-radius:24rpx;border:1rpx solid #edf2f7;padding:28rpx 32rpx;margin:20rpx 0;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.05);display:flex;justify-content:space-between;align-items:flex-start;gap:16rpx}
.excuse-main{display:flex;flex-direction:column;gap:8rpx;flex:1 1 auto;min-width:0}
.excuse-main .content{color:#111827;word-break:break-word}
.excuse-main .time{color:#6b7280;font-size:24rpx}
.excuse-actions{flex:0 0 auto;display:flex;align-items:center}
.btn-compact{display:inline-flex;align-items:center;flex:0 0 auto;min-width:auto;padding:0 18rpx;white-space:nowrap}
