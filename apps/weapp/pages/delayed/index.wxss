.header{margin-bottom:24rpx}.title{font-size:40rpx;font-weight:700;color:#111827}.subtitle{color:#6b7280}
.cards{display:grid;gap:16rpx}
.card{background:#fff;border-radius:20rpx;padding:24rpx;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.06)}
.card-title{font-weight:600;margin-bottom:12rpx}
.stats{display:flex;gap:16rpx}
.stat{flex:1;background:#f9fafb;border-radius:12rpx;padding:16rpx;display:flex;flex-direction:column;align-items:center}
.stat .n{font-size:36rpx;font-weight:700;color:#111827}
.stat .l{font-size:24rpx;color:#6b7280}
.section{margin-top:24rpx}
.section-title{font-weight:600}
.hint{color:#6b7280;margin:12rpx 0}
/* 任务卡片（统一风格） */
.task-card{background:#fff;border-radius:20rpx;border:1rpx solid #edf2f7;padding:20rpx;margin:12rpx 0;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.05)}
.task-card.active{outline:2rpx solid #2563eb}
.task-name{font-size:30rpx}
.task-sub{color:#6b7280;font-size:24rpx;display:block;margin-top:6rpx}
.badge{background:#111827;color:#fff;border-radius:9999rpx;padding:6rpx 16rpx;font-size:24rpx}
.row{display:flex;gap:16rpx;align-items:center}
.empty-card{margin:12rpx 0}
