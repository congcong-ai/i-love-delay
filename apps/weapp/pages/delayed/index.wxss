.header{margin-bottom:32rpx}
.title{font-size:52rpx;font-weight:800;color:#111827;display:block}
.subtitle{color:#6b7280;display:block}

/* 统计面板 */
.card{background:#fff;border-radius:24rpx;padding:32rpx;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.06)}
.card-title{font-weight:700;margin-bottom:12rpx}
.stats-card{margin:20rpx 0 32rpx}
.stats-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:24rpx}
.stat{background:#f9fafb;border-radius:20rpx;padding:20rpx;display:flex;flex-direction:column;align-items:center;text-align:center}
.stat .icon{width:56rpx;height:56rpx;border-radius:50%;background:#eef2ff;display:flex;align-items:center;justify-content:center;margin-bottom:8rpx}
.stat .n{font-size:36rpx;font-weight:700;color:#111827}
.stat .l{font-size:24rpx;color:#6b7280}

.section{margin-top:20rpx}
.section-title{font-weight:700}
.hint{color:#6b7280;margin:12rpx 0 20rpx}

/* 任务卡片 */
.task-card{border:1rpx solid #edf2f7;box-shadow:0 12rpx 36rpx rgba(16,24,40,0.08),0 20rpx 48rpx rgba(16,24,40,0.06)}
.task-name{font-size:30rpx;color:#111827}
.task-meta{font-size:24rpx;color:#6b7280;margin-top:6rpx}
.textarea-wrap{margin:24rpx 0 16rpx}
.actions.two{display:flex;gap:12rpx;margin:12rpx 0 24rpx;justify-content:flex-end;flex-wrap:nowrap}
.actions.two .action{flex:1 1 0;min-width:0}
.actions.two t-button{flex:0 0 auto;width:100%;font-size:24rpx;min-width:140rpx}
/* 统一顶部两个按钮高度 */
.actions.two t-button{height:72rpx}
.empty-card{margin:20rpx 0}

/* 通用行布局（兜底，虽然 app.wxss 已有） */
.row{display:flex;gap:16rpx;align-items:center}
.row-right{justify-content:flex-end}
.btn-compact{display:inline-flex;align-items:center;flex:0 0 auto;min-width:auto;padding:0 18rpx;white-space:nowrap}
