.header{margin-bottom:24rpx}.title{font-size:40rpx;font-weight:700;color:#111827}.subtitle{color:#6b7280}
.card{background:#fff;border-radius:16rpx;padding:20rpx;margin:16rpx 0}
.section-title{font-weight:600;margin-bottom:12rpx}
.row{display:flex;gap:12rpx}
.btn{background:#111827;color:#fff;border-radius:12rpx;padding:12rpx 20rpx}
.btn.primary{background:#111827;color:#fff}
.user{display:flex;gap:12rpx;align-items:center;margin:12rpx 0}
.avatar{width:80rpx;height:80rpx;border-radius:50%}
.meta .name{font-weight:600}
.meta .uid{color:#6b7280;font-size:24rpx}
.tabs{display:flex;gap:12rpx;flex-wrap:wrap;margin-top:8rpx}
.tab{padding:8rpx 16rpx;border-radius:9999rpx;background:#f3f4f6;color:#374151}
.tab.active{background:#111827;color:#fff}
.hint{color:#6b7280;margin:12rpx 0}
.activity{display:flex;flex-direction:column;gap:4rpx;padding:12rpx 0;border-bottom:1px solid #f3f4f6}
.a-title{color:#111827}
.a-time{color:#6b7280;font-size:24rpx}
