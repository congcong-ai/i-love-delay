.header{margin-bottom:40rpx}.title{font-size:42rpx;font-weight:800;color:#111827}.subtitle{color:#6b7280}
.card{background:#fff;border-radius:24rpx;padding:32rpx;margin:32rpx 0;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.05)}
.section-title{font-weight:700;margin-bottom:16rpx}
.row{display:flex;gap:20rpx}
.btn{background:#111827;color:#fff;border-radius:12rpx;padding:12rpx 20rpx}
.btn.primary{background:#111827;color:#fff}
.user{display:flex;gap:16rpx;align-items:center;margin:16rpx 0}
.avatar{width:80rpx;height:80rpx;border-radius:50%}
.meta .name{font-weight:600}
.meta .uid{color:#6b7280;font-size:24rpx}
.tabs{display:flex;gap:16rpx;flex-wrap:wrap;margin:8rpx 0 12rpx}
.tab{padding:8rpx 16rpx;border-radius:9999rpx;background:#f3f4f6;color:#374151}
.tab.active{background:#111827;color:#fff}
.hint{color:#6b7280;margin:16rpx 0}
.activity{display:flex;flex-direction:column;gap:6rpx;padding:16rpx 0;border-bottom:1px solid #f3f4f6}
.a-title{color:#111827}
.a-time{color:#6b7280;font-size:24rpx}
