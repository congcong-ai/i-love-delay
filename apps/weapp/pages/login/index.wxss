.login{ min-height: 100vh; display:flex; flex-direction:column; align-items:center; justify-content:center; gap: 20rpx; background: linear-gradient(180deg, #f6f9ff, #f8fbff); }
.logo{ width: 200rpx; height: 200rpx; border-radius: 32rpx; box-shadow: 0 8rpx 24rpx rgba(16,24,40,0.08); background:#fff }
.title { font-size: 52rpx; font-weight: 800; margin-top: 16rpx; color:#111827 }
.subtitle{ color:#374151; font-size: 28rpx }
.desc{ color:#6b7280; font-size: 26rpx; text-align:center; padding: 0 40rpx; margin-bottom: 40rpx }

/* 登录区域 */
.login-section{ width: 100%; padding: 0 40rpx; margin-top: 40rpx }
.login-card{ 
  background: #fff; 
  border-radius: 24rpx; 
  padding: 40rpx 32rpx; 
  box-shadow: 0 8rpx 24rpx rgba(16,24,40,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}
.login-title{ 
  color: #374151; 
  font-size: 28rpx; 
  font-weight: 600; 
  text-align: center;
  margin-bottom: 8rpx;
}
.wechat.btn, .btn.wechat{ 
  background-color: #07C160; 
  color:#fff; 
  border-radius: 9999rpx; 
  padding: 20rpx 40rpx;
  width: 280rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.hint{ 
  color:#6b7280; 
  font-size: 24rpx; 
  text-align: center;
  line-height: 1.4;
}
