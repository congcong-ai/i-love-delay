.header{margin-bottom:32rpx}.title{font-size:52rpx;font-weight:800;color:#111827;display:block}.subtitle{color:#6b7280;display:block}
.tabs{display:flex;gap:24rpx;margin:16rpx 0}
.tab{padding:12rpx 20rpx;border-radius:9999rpx;background:#f3f4f6;color:#374151}
.tab.active{background:#111827;color:#fff}
.hint{color:#6b7280;margin:12rpx 0}
.card{background:#fff;border-radius:24rpx;padding:32rpx;margin:24rpx 0;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.06)}
.row{display:flex;align-items:center;gap:16rpx}
.space-between{justify-content:space-between}
.author{display:flex;align-items:center;gap:12rpx}
.avatar{border-radius:50%}
/* 名称 + 时间 同行展示 */
.meta-line{display:flex;align-items:center;gap:8rpx;white-space:nowrap}
.meta-line .name{font-weight:600}
.meta-line .time{color:#6b7280;font-size:24rpx}
.meta-line .dot{color:#9ca3af}
.content{margin:16rpx 0;display:flex;flex-direction:column;gap:10rpx}
.content .task{font-weight:700}
.content .excuse{color:#111827}
.actions{display:flex;gap:16rpx;margin-top:8rpx}
.link{background:transparent;color:#374151}
.link.active{color:#2563eb}

/* 操作按钮样式 */
.action-btn{display:flex;align-items:center;gap:6rpx;padding:8rpx 12rpx;border-radius:20rpx;background:transparent}
.action-btn .action-icon{font-size:32rpx}
.action-btn .action-count{font-size:24rpx;font-weight:600}

/* 点赞按钮：未点赞灰色，已点赞红色 */
.action-btn.heart .action-icon{color:#9ca3af}
.action-btn.heart.liked .action-icon{color:#ef4444}
.action-btn.heart .action-count{color:#6b7280}
.action-btn.heart.liked .action-count{color:#ef4444}

/* 收藏按钮：未收藏灰色，已收藏金色 */
.action-btn.star .action-icon{color:#9ca3af}
.action-btn.star.favorited .action-icon{color:#f59e0b}

/* 评论按钮：始终灰色 */
.action-btn.comment .action-icon{color:#9ca3af}
.comment-box{display:flex;gap:12rpx;margin-top:16rpx}
.comment-box t-input{flex:1}
.comments{margin-top:16rpx;display:flex;flex-direction:column;gap:16rpx}
.comment{display:flex;gap:12rpx}
.c-avatar{width:48rpx;height:48rpx;border-radius:50%}
.c-name{font-weight:600}
.c-content{display:block}
.c-time{color:#6b7280;font-size:24rpx}
.loading{color:#6b7280;text-align:center;margin:24rpx 0}
