.header{margin-bottom:32rpx}
.title{font-size:52rpx;font-weight:800;color:#111827;display:block}
.subtitle{color:#6b7280;display:block}
.section{margin:36rpx 0}
.section-title{font-weight:700;margin-bottom:12rpx;white-space:nowrap}
.hint{color:#6b7280;margin:12rpx 0}
.rage-item{display:flex;justify-content:space-between;align-items:center;background:#fff;border-radius:24rpx;border:1rpx solid #edf2f7;padding:32rpx;margin:24rpx 0;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.05)}
.rage-item.selected{border-color:#2563eb;background:#fff}
.badge{background:#f3f4f6;color:#374151;border-radius:9999rpx;padding:4rpx 12rpx;font-size:24rpx}
.row{display:flex;justify-content:space-between;align-items:center;margin-top:12rpx}
.space-between{justify-content:space-between}
.tools{margin-top:12rpx}
.full{width:100%}

/* 卡片：提升留白 */
.card{background:#fff;border-radius:24rpx;padding:32rpx;margin:28rpx 0;box-shadow:0 8rpx 24rpx rgba(16,24,40,0.05)}

/* 进行中横幅 */
.banner{background:linear-gradient(180deg,#fff7ed,#fff);border:1rpx solid #fed7aa}
.banner-title{color:#b45309;font-weight:700}

/* 进度条 */
.progress{height:16rpx;border-radius:9999rpx;background:#e5e7eb;margin-top:16rpx;overflow:hidden}
.progress .bar{height:100%;background:#fb923c}

/* 列表单元格 */
.cell-title{font-weight:600}
.cell-actions{display:flex;align-items:center;gap:12rpx}

/* 暴走完成卡片 */
.completion-card{
  background: linear-gradient(135deg, #dcfce7, #f0fdf4);
  border: 1rpx solid #bbf7d0;
  text-align: center;
  padding: 48rpx 32rpx;
}
.completion-icon{
  font-size: 80rpx;
  margin-bottom: 16rpx;
}
.completion-title{
  font-size: 36rpx;
  font-weight: 800;
  color: #16a34a;
  margin-bottom: 8rpx;
}
.completion-subtitle{
  font-size: 28rpx;
  font-weight: 600;
  color: #15803d;
  margin-bottom: 12rpx;
}
.completion-desc{
  font-size: 26rpx;
  color: #166534;
  line-height: 1.5;
}
